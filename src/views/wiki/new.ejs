<% include ../static/partials/header.ejs %>
<% include ../static/partials/navbar.ejs %>

<main class="container">
  <header class="jumbotron">
    <h1>Add an Article</h1>
  </header>
  <form action="/wiki/create" method="post">
    <div class="form-group">
      <label for="title">Article Title</label>
      <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
      <small class="text-muted" id="titleHelp">Title must be 5 or more characters in length.</small>
    </div>
    <div class="form-group">
      <label for="body">Article Body</label>
      <textarea rows="4" class="form-control" name="body" placeholder="Enter body of the article."></textarea>
      <small class="text-muted" id="bodyHelp">Body must be 150 or more characters in length.</small>
    </div>
    <% if(currentUser.isPremium() ||currentUser.isAdmin()){ %>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" name="private">
        <label class="form-check-label" for="private">Please check this if you would like this article to be private.</label>
      </div>
    <% } %>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</main>


