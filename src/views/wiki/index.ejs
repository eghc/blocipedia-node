<% include ../static/partials/header.ejs %>
<% include ../static/partials/navbar.ejs %>
<main class="container">
  <section>
    <header class="jumbotron my-4">
      <% include ../static/partials/messages.ejs %>
      <div class="row">
        <div class="col-md-10">
          <div class="md-form mt-0">
            <input class="form-control" type="text" placeholder="Search" aria-label="Search">
          </div>
        </div>
        <div class="col-md-2">
          <a href="/wiki/new" class="btn btn-primary btn-md">Add an Article</a>
        </div>
      </div>
    </header>
    <section class="col-lg-10">
      <% wikis.forEach((wiki) => { %>
        <% if(!wiki.private) { %>
          <div class="row">
            <div class="col-md-10">
              <a href="/wiki/<%= wiki.id %>"><h4><%= wiki.title %></h4></a>
              <p><%= wiki.body.substring(0, 100).replace(/(<([^>]+)>)/ig,'') %> ... </p>
            </div>
          </div>
        <% } %>
      <% }) %>
    </section>
  </section>
</main>


<% include ../static/partials/footer.ejs %>
